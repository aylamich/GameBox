<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/tlou2"
    android:layout_height="match_parent"
    tools:context=".ui.Login.CreatingAccountActivity">

    <LinearLayout
        android:id="@+id/ll_creating_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/bg_login_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:textStyle="bold"
            android:drawableTint="@color/white"
            android:text="Voltar para a tela de  login"
            android:drawableLeft="@drawable/outline_arrow_back_ios_24"
            android:background="@drawable/bg_upper_button_login"
            android:layout_width="match_parent"
            android:tint="@color/white"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Criando a sua conta"
            android:textColor="@color/white"
            android:textSize="38sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Nome completo"
            app:boxStrokeColor="@color/white"
            app:endIconTint="@color/red"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/outline_sentiment_very_satisfied_24"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextColor="#CDC7BFBF">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>















        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apelido"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@android:color/transparent"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:counterTextColor="@color/white"
            app:endIconDrawable="@drawable/outline_edit_24"
            app:endIconTint="@color/red"
            app:endIconMode="custom">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>



















        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:hintAnimationEnabled="true"
            app:endIconTint="@color/red"
            app:endIconMode="custom"
            android:hint="Email"
            app:endIconDrawable="@drawable/outline_email_24"
            app:hintTextColor="#CDC7BFBF">


            <com.google.android.material.textfield.TextInputEditText
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Senha (8 caracteres)"
            app:boxStrokeColor="@color/white"
            android:background="@color/white"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/red"
            android:backgroundTint="@color/white"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextColor="#CDC7BFBF">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Confirmar Senha"
            app:boxStrokeColor="@color/white"
            android:background="@color/white"
            app:passwordToggleEnabled="true"
            android:backgroundTint="@color/white"
            app:passwordToggleTint="@color/red"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextColor="#CDC7BFBF">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:drawableRight="@drawable/outline_sentiment_very_satisfied_24"
        android:drawableTint="@color/white"
        android:paddingStart="20dp"
        android:background="@drawable/bottom_button_login_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar conta"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>